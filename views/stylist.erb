<h1><%= @stylist.name() %></h1>

<% if @stylist.clients().any?() %>
  <h3>Here are all the clients for this stylist:</h3>

  <ul>
    <% @stylist.clients().each() do |client| %>
      <li><%= client.description() %></li>
    <% end %>
  </ul>

<% else %>
  <p>There are no clients on this list!</p>
<% end %>

<p>Create a new client:</p>

  <form action="/clients" method="post">
    <input id="list_id" name="list_id" type="hidden" value="<%= @stylist.id() %>">

    <label for="description">Task Description</label>
    <input id="description" name="description" type="text">

    <button type="submit">Add client</button>
  </form>

<div class="container">
  <a href="/">Home</a>
  <a href="/lists">View All Lists</a>
  <a href="/lists/new">Add New List</a>
</div>
